
<% layout("/layouts/boilerplate") %>

<div class="container mx-auto py-12 px-4">
    <div class="bg-white shadow-lg rounded-lg p-8">
        <h2 class="text-3xl font-semibold mb-6 text-center">Edit Property</h2>

        <form method="POST" action="/explore/<%= listing._id %>?_method=PUT" class="space-y-6 needs-validation" novalidate enctype="multipart/form-data">
            <!-- Title Field -->
            <div class="form-group mb-3">
                <label for="title" class="text-lg text-gray-700">Title</label>
                <input type="text" class="form-control p-3 border border-gray-300 rounded-md w-full" name="listing[title]" value="<%= listing.title %>" required>
            </div>

            <!-- Description Field -->
            <div class="form-group mb-3">
                <label for="description" class="text-lg text-gray-700">Description</label>
                <input type="text" class="form-control p-3 border border-gray-300 rounded-md w-full" name="listing[description]" value="<%= listing.description %>" required>
            </div>

            <div class="form-group mb-3">
                <img src="<%= originalImageUrl %>" class="w-25">
            </div>

            <!-- Image URL Field -->
            <div class="form-group mb-3">
                <label for="image" class="text-lg text-gray-700">Upload New Image</label>
                <input type="file" class="form-control p-3 border border-gray-300 rounded-md w-full" name="listing[image]" id="image">
            </div>
            
            <!-- Price Field -->
            <div class="form-group mb-3">
                <label for="price" class="text-lg text-gray-700">Price</label>
                <input type="number" class="form-control p-3 border border-gray-300 rounded-md w-full" name="listing[price]" value="<%= listing.price %>" required>
            </div>
            
            <!-- Location and Country Fields -->
            <div class="flex gap-4">
                <!-- Location -->
                <div class="form-group mb-3 flex-1">
                    <label for="location" class="text-lg text-gray-700">Location</label>
                    <input type="text" class="form-control p-3 border border-gray-300 rounded-md w-full" name="listing[location]" value="<%= listing.location %>" required>
                </div>
                
                <!-- Country -->
                <div class="form-group mb-3 flex-1">
                    <label for="country" class="text-lg text-gray-700">Country</label>
                    <input type="text" class="form-control p-3 border border-gray-300 rounded-md w-full" name="listing[country]" value="<%= listing.country %>" required>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-center gap-6 mt-6">
                <a href="/explore/<%= listing._id %>" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600">Cancel</a>
                <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600">Update</button>
            </div>
        </form>
    </div>
</div>