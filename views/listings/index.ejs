<% layout("/layouts/boilerplate") %>



    <section class="container mx-auto py-16 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        <% for(let list of allData){ %>
            <div class="bg-white shadow-lg rounded-lg overflow-hidden transform hover:scale-105 transition duration-300">
                <img src="<%= list.image.url %>" class="w-full h-48 object-cover" alt="listing_image">
              <div class="p-6">
                <h3 class="text-xl font-semibold"><%= list.title %></h3>
                <p class="mt-2 text-gray-700">&#8377;<%= list.price %>/Night</p>
                <a href="/explore/<%= list._id %>" class="text-blue-500 mt-4 inline-block">View More</a>
              </div>
            </div>
        <% } %>
  </section>
